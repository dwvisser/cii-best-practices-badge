<% content_for :nav_extras do %>
  <li>
    <% if logged_in? %>
      <%= link_to 'Add', new_project_path %>
    <% end %>
  </li>
<% end %>

<div class="center">
<h2>Projects</h2>
  <%= search_form_for @search do |f| %>

      # Search if the name field contains...
      <%= f.label :name_cont %>
      <%= f.search_field :name_cont %>

      # Search if the description field contains...
      <%= f.label :description_cont %>
      <%= f.search_field :description_cont %>

      <%= f.submit %>
  <% end %>
<br>
<%= link_to 'Add New Project', new_project_path, class:"btn btn-success" %>
<br>
<br>
  <%= render 'table', projects: @projects %>
  <%= will_paginate @projects %>
</div>
